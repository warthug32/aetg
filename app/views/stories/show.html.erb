<% content_for :extra_include do %>

<% end %>

<% content_for :main_body do %>
<div role="main" class="row">
    	<div class="twelve columns">
            <img src="<%= @main.banner.url(:original) %>" />
        </div>
</div>
<div class="row">
        <section class="storiesFeatures">
			<article class="three columns <%= @page_url %>">
				<header class="headerStories <%= I18n.locale%>"><%= @main.page_title.upcase %></header>
					<section>
						<header><%= t :corporate_case %></header>
						<ul class="sidebar_links">
							<% for n in @main.pages.order("display_order") %>
								<% unless n.pages.count > 0 %>
									<li>
										<a href="/our_stories/<%= n.page_url %>"><%= n.page_title %></a>
									</li>
								<% end %>
							<% end %>
						</ul>
					</section>
			</article>
			<article class="nine columns <%= @page_url %>">
				<header class="headerStories  <%= I18n.locale%>""><%= @current_page.page_title.upcase %></header>
				<div class="content_holder">
					<% unless @current_page.body.nil? || @current_page.body.blank? %>
						<%= raw @current_page.body %>
					<% end %>
			</article>
        </section>
</div>
<% end %>

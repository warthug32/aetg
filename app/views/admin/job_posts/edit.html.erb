<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@job_post, :as => :job_post, :validate => true,  :url => admin_job_post_path(@job_post)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit Job Post</h2></legend>

	        <dl>
				<dt>
	                <label>Position</label>
	            </dt>
	            <dd>
					<%= f.text_field :position, :class => 'small' %>  
	            </dd>
	            <dt>
	                <label>Reference Code</label>
	            </dt>
	            <dd>
					<%= f.text_field :reference_code, :class => 'small' %>  
	            </dd>
	            <dt>
	                <label>Location</label>
	            </dt>
	            <dd>
	            	<%= country_select(:job_post, :location) %>
				</dd>
				<dt>
	                <label>Work Type</label>
	            </dt>
	            <dd>
					<% @worktypeSet = WorkType.all %>
					<%= f.collection_select :work_type, @worktypeSet, :id, :name, {}, {:class => 'select-1'} %>
                </dd>
                <dt>
	                <label>Salary Range</label>
	            </dt>
	            <dd>
					<%= f.text_field :salary1, :class => 'small' %>&nbsp;&nbsp;&ndash;&nbsp;&nbsp;<%= f.text_field :salary2, :class => 'small' %> 
	            </dd>
	            <dt>
	                <label>Job Industry</label>
	            </dt>
	            <dd>
					<% @industrySet = JobIndustry.all %>
					<%= f.collection_select :job_industry_id, @industrySet, :id, :name, {:include_blank => true}, {:class => 'select-1'} %>
                </dd>
                <dt>
	                <label>Job Classification</label>
	            </dt>
	            <dd>
					<% @classificationSet = JobClassification.all %>
					<%= f.collection_select :job_classification_id, @classificationSet, :id, :name, {:include_blank => true}, {:class => 'select-1'} %>
                </dd>
                <dt>
	                <label>Company</label>
	            </dt>
	            <dd>
					<% @companySet = Company.all %>
					<%= f.collection_select :company_id, @companySet, :id, :name, {:include_blank => true}, {:class => 'select-1'} %>
                </dd>
                <dt>
	                <label>Job Description</label>
	            </dt>
	            <dd>
					<%= f.cktext_area :description, :width => '80%' %>  
	            </dd>
	            <dt>
	                <label>Requirements</label>
	            </dt>
	            <dd>
					<%= f.cktext_area :requirements, :width => '80%' %>  
	            </dd>
			</dl>
		</fieldset>
		<fieldset>
		        <legend><h2>Settings</h2></legend>

		        <dl>
					<dt>
		                <label>Publish Date</label>
		            </dt>
		            <dd>
						<%= f.text_field :publish_date, :class => 'datepicker small'  %>
		            </dd>
					<dt>
		                <label>Locale</label>
		            </dt>
		            <dd>
						<% @collectionSet = Locale.all%>
	                    <%= f.collection_select :locale, @collectionSet, :code, :name, {:include_blank => true}, {:class => 'select-1'} %>
		            </dd>
					<dt>
		                <label>Is Published?</label>
		            </dt>
		            <dd>
						<%= f.check_box :activate  %>
		            </dd>
		        </dl>
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
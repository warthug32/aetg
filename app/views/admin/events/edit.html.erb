<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@event, :as => :event, :validate => true, :html => { :multipart => true }, :url => admin_event_path(@event)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit Event Page</h2></legend>

	        <dl>
				<dt>
	                <label>Title</label>
	            </dt>
	            <dd>
					<%= f.text_field :title, :class => 'small' %>  
	            </dd>
				<dt>
	                <label>Content</label>
	            </dt>
	            <dd>
					<%= f.cktext_area :content, :width => '80%' %>
	            </dd>
				<dt>
	                <label>Short Description</label>
	            </dt>
	            <dd>
					<%= f.text_area :short_description, :rows => 6, :cols => 80  %>  
					<p>Short description of the news</p>
	            </dd>
				<dt>
	                <label>Start Date</label>
	            </dt>
	            <dd>
					<%= f.text_field :start_date, :class => 'datepicker small'  %>
	            </dd>
				<dt>
	                <label>End Date</label>
	            </dt>
	            <dd>
					<%= f.text_field :end_date, :class => 'datepicker small'  %>
	            </dd>
				<dt>
	                <label>Upload Cover</label>
	            </dt>
	            <dd>
					<img src="<%= @event.cover.url(:thumb) %>" />
					<%= f.file_field :cover, :class => 'fileupload customfile-input' %>
	            </dd>
	        </dl>
		</fieldset>
		<fieldset>
		        <legend><h2>Settings</h2></legend>

		        <dl>
					
					<dt>
		                <label>Publish Date</label>
		            </dt>
		            <dd>
						<%= f.text_field :publish_date, :class => 'datepicker small'  %>
		            </dd>
					<dt>
		                <label>Tag</label>
		            </dt>
		            <dd>
						<%= f.text_field :tag, :class => 'large' %>
		            </dd>
					<dt>
		                <label>Locale</label>
		            </dt>
		            <dd>
						<% @collectionSet = Locale.all%>
	                    <%= f.collection_select :locale, @collectionSet, :code, :name, {:include_blank => true}, {:class => 'select-1'} %>
		            </dd>
					<dt>
		                <label>Is Published?</label>
		            </dt>
		            <dd>
						<%= f.check_box :activate  %>
		            </dd>
					<dt>
		                <label>Is Highlight?</label>
		            </dt>
		            <dd>
						<%= f.check_box :highlight  %>
		            </dd>
		        </dl>
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
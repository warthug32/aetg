<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@article_categories, :as => :article_categories, :validate => true, :url => admin_article_category_path(@article_categories)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Create Article Category</h2></legend>

	        <dl>
				<dt>
	                <label>Category Name</label>
	            </dt>
	            <dd>
					<%= f.text_field :name, :class => 'small' %>  
	            </dd>
				<dt>
	                <label>Zh Name</label>
	            </dt>
	            <dd>
					<%= f.text_field :name_zh, :class => 'small' %>  
	            </dd>
				<dt>
	                <label>Gb Name</label>
	            </dt>
	            <dd>
					<%= f.text_field :name_gb, :class => 'small' %>  
	            </dd>
			</dl>
		
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
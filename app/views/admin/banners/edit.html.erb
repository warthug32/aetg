<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@banners, :as => :banners, :validate => true, :html => { :multipart => true }, :url => admin_banner_path(@banners)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit Banner</h2></legend>

	        <dl>
				<dt>
	                <label>Title</label>
	            </dt>
	            <dd>
					<%= f.text_field :title, :class => 'small' %>  
	            </dd>
				<dt>
	                <label>Description</label>
	            </dt>
	            <dd>
					<%= f.text_area :description, :rows => 5, :cols => 40, :class => 'wysiwyg large' %>
					<p>Short description of the banner</p>
	            </dd>
				<dt>
	                <label>Url</label>
	            </dt>
	            <dd>
					<%= f.text_field :url, :class => 'large' %>  
	            </dd>
				<dt>
	                <label>Upload Banner</label>
	            </dt>
	            <dd>
					<img src="/images/banners/<%= @banners.id %>/original/<%= @banners.banner_file_name %>" width="150px">
					<%= f.file_field :banner, :class => 'fileupload customfile-input' %>
	            </dd>
	        </dl>
		</fieldset>
		<fieldset>
		        <legend><h2>Settings</h2></legend>

		        <dl>
					<dt>
		                <label>Tag</label>
		            </dt>
		            <dd>
						<%= f.text_field :tag, :class => 'large' %>
		            </dd>
					<dt>
		                <label>Publish Date</label>
		            </dt>
		            <dd>
						<%= f.text_field :publish_date, :class => 'datepicker small'  %>
		            </dd>
					<dt>
		                <label>Locale</label>
		            </dt>
		            <dd>
						<% @collectionSet = Locale.all%>
	                    <%= f.collection_select :locale, @collectionSet, :code, :name, {:include_blank => true}, {:class => 'select-1'} %>
		            </dd>
					<dt>
		                <label>Is Published?</label>
		            </dt>
		            <dd>
						<%= f.check_box :activate  %>
		            </dd>
		        </dl>
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
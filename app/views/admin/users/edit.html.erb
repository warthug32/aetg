<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@user, :as => :user, :validate => true, :url => admin_user_path(@user)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit User</h2></legend>

	        <dl>
				<dt>
	                <label>Username</label>
	            </dt>
	            <dd>
					<%= f.text_field :username, :class => 'small' %>  
	            </dd>

	            <dt>
	                <label>Email</label>   
	            </dt>

	            <dd>
	                <%= f.text_field :email, :class => 'small' %>  
	            </dd>

	            <dt>
	                <label>Password</label>   
	            </dt>

	            <dd>
	                <%= f.password_field :password, :class => 'small' %>  
	            </dd>
				
	            <dt>
	                <label>Confirm Password</label>   
	            </dt>

	            <dd>
	                <%= f.password_field :password_confirmation, :class => 'small' %>  
	            </dd>
	
	            <dt>
	                <label>Role</label>
	            </dt>
	            <dd>
					<%= f.select(:role, {"Admin" => 'Admin', "Editor" => 'Editor'}, {}, {:class => 'select-1'})%>
	            </dd>


	        </dl>
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
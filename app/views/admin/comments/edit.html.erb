<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@comments, :as => :comments, :validate => true, :html => { :multipart => true }, :url => admin_comment_path(@comments)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit Products</h2></legend>

	        <dl>
				<dt>
	                <label>Content</label>
	            </dt>
	            <dd>
					<%= f.text_area :content %>  
	            </dd>
				
	        </dl>
		
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<%= form_for(@page, :as => :page, :validate => true, :html => { :multipart => true }, :url => admin_page_path(@page)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit Page</h2></legend>

	        <dl>
				<dt>
	                <label>Page Title</label>
	            </dt>
	            <dd>
					<%= f.text_field :page_title, :class => 'small' %>  
	            </dd>
				<dt>
	                <label>Browser Title</label>
	            </dt>
	            <dd>
					<%= f.text_field :browser_title, :class => 'small' %>  
	            </dd>
				<dt>
	                <label>Page Url</label>
	            </dt>
	            <dd>
					<%= f.text_field :page_url, :class => 'medium' %>  
	            </dd>
				
				<dt>
	                <label>Body Content</label>
	            </dt>
	            <dd>
					<%= f.cktext_area :body, :width => '80%' %>
	            </dd>
				<dt>
	                <label>Limited Body Content</label>
	            </dt>
	            <dd>
					<%= f.cktext_area :short_body, :width => '80%' %>
	            </dd>
				<dt>
	                <label>Link Forward</label>
	            </dt>
	            <dd>
					<%= f.text_field :link_forward, :class => 'medium' %>  
	            </dd>
				<dt>
	                <label>Upload Banner</label>
	            </dt>
	            <dd>
					<img src="/images/pages/<%= @page.id %>/original/<%= @page.banner_file_name %>" width="150px">
					<%= f.file_field :banner, :class => 'fileupload customfile-input' %>
	            </dd>
	
	        </dl>
		</fieldset>
		<fieldset>
		        <legend><h2>Settings</h2></legend>

		        <dl>
					<dt>
		                <label>Tag</label>
		            </dt>
		            <dd>
						<%= f.text_field :tag, :class => 'large' %>  
		            </dd>
					<dt>
		                <label>Publish Date</label>
		            </dt>
		            <dd>
						<%= f.text_field :publish_date, :class => 'datepicker small'  %>
		            </dd>
					<dt>
		                <label>Parent</label>
		            </dt>
		            <dd>
						<% @pageSet = Page.all%>
	                    <%= f.collection_select :page_id, @pageSet, :id, :page_title, {:include_blank => true}, {:class => 'select-1'} %>
		            </dd>
					<dt>
		                <label>Template</label>
		            </dt>
		            <dd>
						<% @templateSet = DesignTemplate.all%>
	                    <%= f.collection_select :design_template, @templateSet, :name, :name, {:include_blank => false}, {:class => 'select-1'} %>
		            </dd>
					<dt>
		                <label>Locale</label>
		            </dt>
		            <dd>
						<% @collectionSet = Locale.all%>
	                    <%= f.collection_select :locale, @collectionSet, :code, :name, {:include_blank => true}, {:class => 'select-1'} %>
		            </dd>
					<dt>
		                <label>Display Order</label>
		            </dt>
		            <dd>
						<%= f.text_field :display_order, :class => 'small' %>  
		            </dd>
					
					<dt>
		                <label>Is Skip?</label>
		            </dt>
		            <dd>
						<%= f.check_box :isSkip  %>
		            </dd>
					
					<dt>
		                <label>Show in Menu?</label>
		            </dt>
		            <dd>
						<%= f.check_box :show_in_menu  %>
		            </dd>
					<dt>
		                <label>Is Published?</label>
		            </dt>
		            <dd>
						<%= f.check_box :activate  %>
		            </dd>
		        </dl>
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
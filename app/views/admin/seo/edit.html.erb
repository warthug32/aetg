<% content_for :header_meta do%>
<!-- // Meta //  -->
<meta charset="utf-8">   
<meta name="description" content="" />
<meta name="keywords" content="" />

<% end %>
<% content_for :content do %>
	<% if params[:notice] %>
		<div class="notification success">
			<a href="#" class="close-notification" title="Hide Notification" rel="tooltip">x</a>
			<p><strong>Success notification:</strong> <%= params[:notice] %></p>
		</div>
	<% end %>
	
	<%= form_for(@seo, :as => :seo, :validate => true, :url => admin_seo_path(@seo)) do |f| %>
	
	   <fieldset>
	        <legend><h2>Edit SEO Setting</h2></legend>

	        <dl>
				<dt>
	                <label>Meta Description</label>
	            </dt>
	            <dd>
					<%= f.text_area :meta_description, :rows => 6, :cols => 80  %>  
	            </dd>
				<dt>
	                <label>Meta Keywords</label>
	            </dt>
	            <dd>
					<%= f.text_area :meta_keywords, :rows => 6, :cols => 80  %>  
	            </dd>
				<dt>
	                <label>Meta Author</label>
	            </dt>
	            <dd>
					<%= f.text_field :meta_author, :class => 'large' %>  
	            </dd>
	        </dl>
	        <p>
	            <button type="submit" value="Save">Submit</button> or <a href="/admin/<%= session[:current_page_name].downcase %>" title="Leave without saving" rel="tooltip">Cancel</a>
	        </p>
	        <br />

	    </fieldset>
	<% end %>
	<div>
	    <a href="/admin/<%= session[:current_page_name].downcase %>">Back to List</a>
	</div>
<% end %>
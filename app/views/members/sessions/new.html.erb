<% content_for :main_body do %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "custom nice" } ) do |f| %>
  <div>Email<br />
  <%= f.email_field :email, :class => 'input-text' %></div>

  <div>Password<br />
  <%= f.password_field :password, :class => 'input-text' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Remember me?</div>
  <% end -%>
  <% if devise_mapping.recoverable? -%>
    <div><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
  <% end -%>
	<br/>
  <div><%= f.submit "Sign in", :class => "button small" %></div>
<% end %>



<% end %>